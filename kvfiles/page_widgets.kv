
#: import Window kivy.core.window.Window
#: set icon_size 20

<SelectableLabel>:
    text: ''
    markup: True
    color: (0,0,0,1)
    text_size: Window.width - 2 * icon_size , None
    size: self.texture_size
    size_hint_y: None

    selection_color: (66/255, 170/255, 1, 0.2)

    on_ref_press: 
        root.on_refference(*args)


<Paragraph>:
    text: ''
    markup: True
    color: (0,0,0,1)
    halign: 'left'
    valign: 'center'

<Space>:
    size_hint_y: None
    size: Window.width ,0.05 * Window.height

<Unknown>:
    text: ''
    color: (0,0,1,1)

<Mistake>:
    text: ''
    color: (1,0,0,1)

<ImageData>:
    size_hint_y: None
    size: self.texture_size

<Title>:
    text: ''
    font_size: 30
    markup: True
    halign: 'center'
    valign: 'center'
    bold: True

<NotesDelimeter>:
    size_hint_y: None
    size: Window.width ,0.02 * Window.height 

    canvas:
        Color:
            rgba: (0,0.5,1,1)
        Line:
            points: self.pos[0], self.pos[1], self.pos[0] + self.size[0], self.pos[1]
            width: 0.75

<Note>:
    text: ''
    color: (10/255, 183 / 255 , 122 / 255 , 1)    
    halign: 'left'
    valign: 'center'

<SubTitle>:
    text: ''
    halign: 'center'
    valign: 'center'

<Poem_title>:
    text: ''
    bold: True
    halign: 'center'
    valign: 'center'
    size: self.texture_size
    text_size: (Window.width - 2 * icon_size) * 0.4, None
    pos_hint_x: 0.6
    
<Poem_line>:
    text: ''
    padding_x: 0.2 * Window.size[0]


<Stanza_empty>:
    size_hint_y: None
    size: Window.width ,0.02 * Window.height

<Author>:
    padding_x: 0.1 * Window.width
    italic: True

<Epigraph_text>:
    text: ''
    text_size: (Window.width - 2 * icon_size) * 0.4, None
    padding_x: 0.6


<EpigraphAuthor>:
    text: ''
    halign: "right"




