
#: import Window kivy.core.window.Window

<SelectableLabel>:
    text: ''
    markup: True
    color: (0,0,0,1)
    font_size: 32

    text_size: Window.width - 2 * icon_size , None
    size: self.texture_size
    size_hint_y: None

    selection_color: (66/255, 170/255, 1, 0.2)

    on_ref_press: 
        root.on_refference(*args)

<Paragraph>:
    text: ''
    markup: True
    valign: 'center'
    italic: root.cite
    font_name: root.get_font('NotoSans-Regular.ttf')

    on_parent:
        root.resolve_state()

<Space>:
    size_hint_y: None
    size: Window.width ,0.05 * Window.height

<Unknown>:
    text: ''
    color: (0,0,1,1)

<Mistake>:
    text: ''
    color: (1,0,0,1)

<ImageData>:
    size_hint_y: None
    height: root.get_size(icon_size)[1]
    
    canvas:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            texture: root.texture
            size: self.size
            pos: self.pos

<Title>:
    text: ''
    font_size: 40
    markup: True
    halign: 'center'
    valign: 'center'
    bold: True
    italic: root.cite
    font_name: root.get_font('NotoSans-Bold.ttf')

    on_parent:
        root.resolve_state()

<NotesDelimeter>:
    size_hint_y: None
    size: Window.width ,0.02 * Window.height 

    canvas:
        Color:
            rgba: (0,0.5,1,1)
        Line:
            points: self.pos[0], self.pos[1], self.pos[0] + self.size[0], self.pos[1]
            width: 0.75

<Note>:
    text: ''
    color: (10/255, 183 / 255 , 122 / 255 , 1)    
    halign: 'left'
    valign: 'center'

<SubTitle>:
    text: ''
    halign: 'center'
    valign: 'center'

    on_parent:
        if root.cite: self.font_size = 30
    
<Poem_line>:
    text: ''
    padding_x: 0.1 * Window.width

    on_parent:
        self.resolve_state()

<Stanza_empty>:
    size: Window.width ,0.02 * Window.height

<Author>:
    halign: 'right'
    italic: True

    on_parent:
        root.resolve_state()

<Text>:
    halign: "left"

    on_parent:
        root.resolve_state()

<SelectablePair>:
    cols: 2
    height:root.child.texture_size[1]
    width: Window.size[0] - 2 * icon_size
    size_hint_y: None
    spacing: 8
    
    on_parent:
        if self.parent: self.add_widget(root.child)
        root.child.text_size = ((1-root.pad) * Window.size[0], None)
        root.child.texture_update()

    Space:
        size_hint_x: root.pad
        size_hint_y: None
        height: root.child.height

<Annotation_empty>:
    height: 0.04 * Window.height

<Title_empty>:
    height: 0.02 * Window.height